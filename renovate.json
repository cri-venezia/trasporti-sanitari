{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base"
	],
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": false
		},
		{
			"matchUpdateTypes": ["major"],
			"automerge": false
		}
	],
	"schedule": [
		"after 9am and before 6pm every weekday"
	],
	"timezone": "Europe/Rome"
}
